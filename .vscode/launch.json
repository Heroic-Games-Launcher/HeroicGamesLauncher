{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Heroic (HMR & HR)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "args": ["start"],
      "env": {
        "REMOTE_DEBUGGING_PORT": "9222"
      }
    },
    {
      "name": "Debug Frontend Process",
      "port": 9222,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}/src/frontend",
      "timeout": 60000,
      "presentation": {
        "hidden": true
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug All",
      "configurations": ["Launch Heroic (HMR & HR)", "Debug Frontend Process"],
      "presentation": {
        "order": 1
      }
    }
  ]
}
