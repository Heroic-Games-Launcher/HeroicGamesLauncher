{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "platform": "github",
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "timezone": "UTC",
  "schedule": ["after 3am on sunday"],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "stabilityDays": 3,
  "dependencyDashboardAutoclose": false,
  "node": { "version": "20" },
  "pnpm": { "enabled": true },
  "ignorePaths": ["patches/**"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "groupName": "major releases",
      "dependencyDashboardApproval": true,
      "stabilityDays": 7
    },
    {
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "prod minor+patch"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "groupName": "devDependencies",
      "automerge": false
    },
    {
      "matchPaths": ["e2e/**", "tests/**"],
      "groupName": "test-tooling"
    },
    {
      "groupName": "patched dependencies",
      "description": "Gates packages with pnpm patches. Requires manual approval via Dashboard to prevent breaking local fixes.",
      "matchManagers": ["npm"],
      "matchPackageNames": ["@types/node", "howlongtobeat-js"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "dependencyDashboardApproval": true,
      "stabilityDays": 7,
      "prBodyNotes": [
        "⚠️ **Note:** This dependency has a local pnpm patch. Please re-verify the patch still applies correctly after updating."
      ]
    },
    {
      "matchManagers": ["github-actions"],
      "pinDigests": true,
      "rangeStrategy": "replace",
      "groupName": "github-actions"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["after 3am on sunday"],
    "stabilityDays": 0
  }
}
